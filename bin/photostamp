#!/usr/bin/env bash

#######################################
# Constants
readonly FT_DIR="directory"
readonly FT_FILE="file"

#######################################
# Initialize vars
size=480000@

#######################################
# Command line arguments
while getopts :s:f:t: option
do
    case "$option" in
        s)
            size=$OPTARG
            ;;
        f)
            sourcefile=$OPTARG
            ;;
        t)
            targetfile=$OPTARG
            ;;
        *)
            exit -1
            ;;
    esac
done

#######################################
# Check arguments
## sourcefile
if [ "" = "$sourcefile" ]; then
    echo "Require <source> image filename."
elif [ -ne "$sourcefile" ]; then
    echo "<source> image not found."
elif [ -d "$sourcefile" ]; then
    filetype=$FT_DIR
else
    filetype=$FT_FILE
fi

## targetfile
if [ "" = "$targetfile" ]; then
    echo "Require <target> image filename."
fi

#######################################
# Main
#convert $sourcefile -resize $size $targetfile

exit 0
